{
    "name": "ReaderScout",
    "description": "ReaderScout Chrome Extension",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["./static/js/content.js"]
        }
    ],
    "permissions": [
        "storage",
        "activeTab",
        "notifications",
        "scripting",
        "alarms",
        "tabs",
        "identity",
        "identity.email"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Open the popup",
        "default_icon": {
            "16": "logo16.png",
            "32": "logo16.png",
            "48": "logo16.png",
            "128": "logo16.png"
        }
    },
    "icons": {
        "16": "logo192.png",
        "48": "logo192.png",
        "128": "logo192.png"
    },
    "key": "",
    "oauth2": {
        "client_id": "776330643444-q06b5p07c82gd07brmvbcc7mfre9l161.apps.googleusercontent.com",
        "scopes": ["https://www.googleapis.com/auth/userinfo.email"]
    }
}
